@{
    Layout = "~/Areas/Administrador/Views/Shared/_LayoutAdmin.cshtml";
}


@model ImovelWeb.DDD.ValueObject.Model.Porcentagem
<div id="main_container">
    <div class="header">
        <div class="logo">
            <a href="#">
                <img src="@Url.Content("~/Areas/Administrador/Content/images/logo.gif")" alt="" title="" border="0" /></a>
        </div>
    </div>
    <div class="main_content">
        <div class="menu">
     
        </div> 

<div class="center_content">  
    <div class="left_content">
        <br /><br />
    
 @Html.Partial("~/Areas/Administrador/Views/Shared/_MenuCorretor.cshtml") 
    
</div>  
    
<div class="right_content">            
        <br /><br />
<h2>Cadastro de Porcentagem 
    <img src="~/Areas/Content/images/error.png" title="Sair do sistema" alt="Sair do sistema" onclick="DeslogarSistema()" style="cursor:pointer;" />

    </h2> 
                    
<!-- montar o conteudo -->
@using (Html.BeginForm("", "/Admin/Porcentagem", FormMethod.Post, new { @id = "FormPorcentagem" }))
{
        @Html.AntiForgeryToken()
  <table>
      
      <tr>
          <td colspan="2"><div id="resposta"></div></td>
      </tr>
     <tr>
         <td>@Html.LabelFor(model=>model.Desconto)</td>
         <td>
             @Html.TextBoxFor(model=>model.Desconto,new { @class = "txtlogin",@onkeypress="return SomenteNumero(event)" })
         </td>
     
     <tr>
        <td colspan="2" style="text-align:right">
            <input type="button" value="Enviar" id="btn_buttonLogar" onclick="CadPorcentagem();" />
        </td>
     </tr>
 </table>   
}
<!-- fim do conteudo -->                    

</div>
</div>               
<div class="clear"></div>
</div>
