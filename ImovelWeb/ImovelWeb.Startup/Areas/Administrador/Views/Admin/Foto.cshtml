@{
    ViewBag.Title = "Foto";
    Layout = "~/Areas/Administrador/Views/Shared/_LayoutAdmin.cshtml";
  
}
@model ImovelWeb.DDD.ValueObject.Model.Foto

<div id="main_container">
    <div class="header">
        <div class="logo">
            <a href="#">
                <img src="@Url.Content("~/Areas/Administrador/Content/images/logo.gif")" alt="" title="" border="0" /></a>
        </div>
    </div>
    <div class="main_content">
        <div class="menu">
     
        </div> 

<div class="center_content">  
    <div class="left_content">
        <br /><br />
    
 @Html.Partial("~/Areas/Administrador/Views/Shared/_MenuCorretor.cshtml") 
              
    
</div>  
    
<div class="right_content">            
        <br /><br />
<h2>Foto 
    <img src="~/Areas/Content/images/error.png" title="Sair do sistema" alt="Sair do sistema" onclick="DeslogarSistema()" style="cursor:pointer;" />
    </h2> 
                    
<!-- montar o conteudo -->
@using (Html.BeginForm("", "Admin/Foto", FormMethod.Post, new { @id = "FormFotos", @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
 <table>
     <tr>
         <td colspan="2"><div id="resposta">@ViewBag.msg</div></td>
     </tr>
      <tr>
         <td>@Html.LabelFor(model=>model.Imovel.EmpreendimentoID)</td>
         <td>
             @Html.DropDownList("EmpreendimentoID",   "Selecione...")
         </td>
     </tr>
     <tr>
         <td>@Html.LabelFor(model=>model.ImovelID)</td>
         <td id="txtimovel"><select name="ImovelID" id="ImovelID"><option value="0">Selecione</option></select></td>
     </tr>
     <tr>
         <td>
             @Html.LabelFor(model=>model.NomeFoto)
         </td>
         <td>
             @Html.TextBoxFor(model => model.NomeFoto, new { @class = "txtlogin", @readonly = "readonly" })
         </td>
     </tr>
     <tr>
         <td colspan="2">
             <input type="file" name="file" id="arquivo"   value="" />
         </td>
     </tr>
     <tr>
         <td colspan="2" style="text-align:right">
             <input type="submit" name="enviar" id="btn_buttonLogar" value="Enviar" />
         </td>
     </tr>
 </table>   
}
<!-- fim do conteudo -->                    

</div>
</div>               
<div class="clear"></div>
</div>
</div>
